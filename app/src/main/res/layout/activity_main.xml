<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.atomgroups.progressbar.ProgressBar
        android:id="@+id/tierProgressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tier_progress="30"
        app:tier_progress_bar_sub_label_font_size="10"
        app:tier_progress_stroke_width="4dp"
        app:tier_progress_bar_label_color="@color/black"
        app:tier_progress_bar_sub_label_color="@color/black"
        app:tier_progress_bar_label_enabled="true"
        app:tier_progress_bar_sub_label_enabled="true"
        app:tier_progress_bar_label_font_size="12"
        app:tier_progress_bar_main_color="@color/progressBarBegin"
        app:tier_progress_bar_color="@color/progressBarFinal"
        app:tier_progress_bar_indicator_color="@color/progressBarMid"
        app:tier_progress_bar_label_mode="all"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>